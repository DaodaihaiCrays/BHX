<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.ProductOfCateFragment.ProductOfCateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/primary_min"/>

        <TextView
            android:id="@+id/tvCate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="29dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/custom_edt_category"
            android:textColor="@color/primary_max"
            android:text="TextView" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/revProductOfCate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>