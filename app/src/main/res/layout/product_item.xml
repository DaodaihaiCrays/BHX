<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/primary_min"
        android:orientation="horizontal">

<!--        <View-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="25dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/custom_view_radius" />-->

        <TextView
            android:id="@+id/tvCateName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Tên danh mục"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

<!--        <View-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="25dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/custom_view_radius" />-->
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/revListProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSeeMore"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/custom_item"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_min"
        android:text="Xem thêm 100 sản phẩm"/>

</LinearLayout>